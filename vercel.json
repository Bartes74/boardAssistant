{
  "installCommand": "corepack enable && corepack prepare pnpm@9.12.0 --activate && pnpm install",
  "buildCommand": "pnpm --filter ./backend build && pnpm --filter ./frontend build",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    { "source": "/api/rag", "destination": "/api/rag.ts" },
    { "source": "/api/:path*", "destination": "/api/core-service.ts" },
    { "source": "/(.*)", "destination": "/frontend/dist/$1" }
  ]
}
